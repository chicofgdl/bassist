generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int  @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  role     Role    @default(FUNCIONARIO)
}

model Dataset {
  id          Int   @id @default(autoincrement()) // ID único
  name        String   @unique  // Garante que não haja nomes duplicados
  description String  // Descrição obrigatória
  fileUrl     String?   // URL do arquivo (Firebase) Opcional momentaneamente
  createdAt   DateTime @default(now()) // Data de criação 
}

enum Role {
  ADMIN
  FUNCIONARIO
}

