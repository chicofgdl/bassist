generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int  @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  role     Role    @default(FUNCIONARIO)
}

enum Role {
  ADMIN
  FUNCIONARIO
}

model Dataset {
  id          Int   @id @default(uuid()) // ID único
  name        String   // Nome do dataset
  description String  // Descrição obrigatória
  fileUrl     String   // URL do arquivo (Firebase)
  createdAt   DateTime @default(now()) // Data de criação
}